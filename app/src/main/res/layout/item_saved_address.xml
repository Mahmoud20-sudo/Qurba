<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_red_clock"
            android:visibility="visible"
            app:tint="#b9b9b9">

        </ImageView>

        <TextView
            android:id="@+id/item_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toStartOf="@+id/item_actions_iv"
            android:layout_toEndOf="@+id/address_icon"
            android:textStyle="bold"
            android:textColor="#252a34"
            android:text="Office"
            />

        <TextView
                android:id="@+id/item_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_label_tv"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_toStartOf="@+id/item_actions_iv"
                android:layout_toEndOf="@+id/address_icon"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2.2sp"
                android:maxLength="140"
                android:maxLines="1"
                android:text="1060 Addison St ,building 9, floor 4,  â€¦"
                android:textColor="#46474a"
                android:textSize="11.7sp"
                android:textStyle="normal" />

        <ImageView
            android:id="@+id/item_actions_iv"
            android:layout_width="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_three_dotted"
            android:layout_alignParentEnd="true"
            android:layout_height="@dimen/_40sdp">
        </ImageView>

        <View
            android:id="@+id/recent_search_close"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#f1f6f9" />
    </RelativeLayout>
</layout>