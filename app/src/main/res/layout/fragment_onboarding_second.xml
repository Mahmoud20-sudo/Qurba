<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_rl"
        android:background="@drawable/onboarding_two_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_logo_iv"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_above="@+id/discover_title_tv"
            android:layout_margin="@dimen/_17sdp"
            android:src="@drawable/logo_login" />

        <TextView
            android:id="@+id/discover_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/around_you_tv"
            android:layout_marginStart="@dimen/_17sdp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="-0.5sp"
            android:text="@string/order_tasty_food"
            android:textColor="@color/white"
            android:textSize="@dimen/_26ssp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/around_you_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_day_delicious"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_137sdp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="-0.5sp"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            android:textStyle="normal"/>


    </RelativeLayout>

</layout>